{
  "name": "@hirossan4049/mpy-sdk",
  "version": "1.0.0",
  "description": "MicroPython SDK for M5Stack devices - Node.js serial communication library",
  "main": "dist/node/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "require": "./dist/node/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:node && npm run build:types",
    "build:node": "tsc -p tsconfig.node.json",
    "build:types": "tsc -p tsconfig.types.json",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "dev": "npm run build:node",
    "quick-test": "npm run build:node && node quick-test.js",
    "demo": "npm run build:node && node examples/repl-adapter-example.js",
    "example": "npm run build:node && node examples/basic-usage.js",
    "cli": "npm run build:node && node cli.js",
    "persist": "npm run build:node && node examples/firmware-persistence.js",
    "prepublishOnly": "npm run clean && npm run build && npm run quick-test"
  },
  "keywords": [
    "m5stack",
    "micropython",
    "serial",
    "communication",
    "iot",
    "embedded",
    "hardware"
  ],
  "author": "hirossan4049",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hirossan4049/mpy-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/hirossan4049/mpy-sdk/issues"
  },
  "homepage": "https://github.com/hirossan4049/mpy-sdk#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^3.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.8.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist/browser",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationMap": false,
    "composite": false
  },
  "include": [
    "src/browser.ts",
    "src/core/WebSerialConnection.ts",
    "src/core/ProtocolHandler.ts",
    "src/core/SerialConnection.ts",
    "src/adapters/REPLAdapter.ts",
    "src/manager/DeviceManager.ts",
    "src/utils/FileTransfer.ts",
    "src/utils/PythonAnalyzer.ts",
    "src/types/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}